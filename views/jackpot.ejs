                    <button class="ebutton" onclick="numAdd(10)">10+</button>
                    <button class="ebutton" onclick="numAdd(100)">100+</button>
                    <button class="ebutton" onclick="numAdd(1000)">1000+</button>
                    <button class="ebutton" onclick="numFull()">Всё</button>
                </div>
                <button id="set-bet" onclick="setBet()">Сделать ставку</button>
            </div>
        </div>
        <div id="game-info">
            <div id="circle-out"><svg id="circle" width="450" height="450"></svg></div>
            <div id="circle-inner">
                <div id="arrow"></div>
                <div id="before_game">До начала игры</div>
                <div id="timer">
                    <svg id="clock" viewBox="0 0 29 29" id="clock"><path d="M14.063.782c-7.7 0-14 6.3-14 14s6.3 14 14 14 14-6.3 14-14-6.3-14-14-14zm0 25.2c-6.16 0-11.2-5.04-11.2-11.2 0-6.16 5.04-11.2 11.2-11.2 6.16 0 11.2 5.04 11.2 11.2 0 6.16-5.04 11.2-11.2 11.2z"></path><path d="M14.763 7.782h-2.1v8.4l7.28 4.48 1.12-1.82-6.3-3.78v-7.28z"></path></svg>
                    <div id="timer_value">0.0</div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("header") %>
<%- include("infoContainer") %>
<script src="/jackpot.js"></script>
</body>
</html>