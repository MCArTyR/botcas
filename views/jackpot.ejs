<html>
<head>
    <meta name="viewport" content="width=500,user-scalable=no">
    <title>Jackpot</title>
    <link rel="stylesheet" href="/global.css">
    <link rel="stylesheet" href="/jackpot.css">
</head>
<body>
<div id="content">
    <div id="game">
        <div id="game-img"></div>
        <div id="game-cont">
            <div id="game-name">Jackpot game</div>
            <div id="game-bet">
                <div id="game-summ">0</div>
                <img src="/money.png" id="game-money-icon" />
            </div>
        </div>
    </div>
    <div id="game-content">
        <div id="game-bets">
            <div id="game-bets-2">

                <div id="bet-text">Ставка</div>
                <div id="bet_summ">
                    <input type="number" id="bet_input" oninput="checkBet()" placeholder="Введите сумму...">
                    <button class="input-change" onclick="buttonHalf()">1/2</button>
                    <button class="input-change" onclick="buttonX2()" style="margin-right: -5px;">x2</button>
                </div>
                <div class="buttons">
